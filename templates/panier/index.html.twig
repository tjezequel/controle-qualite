{% extends 'base.html.twig' %}

{% block title %}Panier : {% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    {% for produit in panier.produits %}
        <p>{{ produit.prix }} {{ produit.isBook ? "Livre" : "Non Livre"}}</p>
    {% endfor %}
        <p id="tvaPrice">TVA : {{ panier.vat }}</p>
        <p id="transportPrice">Frais de port : {{ panier.transportation }}</p>
        <p id="totalPrice">Total : {{ panier.total }}</p>
</div>
{% endblock %}
